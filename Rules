#!/usr/bin/env ruby

compile '/stylesheet.css' do
  # nothing
end

compile '/posts/*.md' do
  filter :kramdown
  layout '/post.html'
end

compile '/*' do
  if item.binary?
    # do nothing
  else
    filter :erb
    layout '/default.html'
  end
end

route '/stylesheet.css' do
  '/stylesheet.css'
end

route '/posts/*.md' do
  "#{item.identifier.without_ext}.html"
end

route '/*' do
  if item.binary?
    item.identifier + "" # convert to string
  else
    item.identifier + ""
  end
end

layout '/*', :erb
